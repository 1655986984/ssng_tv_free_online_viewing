{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/proxy?target=heimuer&path=$1" },
    { "src": "/ikun/(.*)",   "dest": "/api/proxy?target=ikun&path=$1" },
    { "src": "/subo/(.*)",   "dest": "/api/proxy?target=subo&path=$1" },
    { "src": "/huawei/(.*)", "dest": "/api/proxy?target=huawei&path=$1" },
    { "src": "/jisu/(.*)",   "dest": "/api/proxy?target=jisu&path=$1" },
    { "src": "/360/(.*)",    "dest": "/api/proxy?target=360&path=$1" },
    { "src": "/wolong/(.*)", "dest": "/api/proxy?target=wolong&path=$1" },

    {
      "src": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "text/html"
        }
      ],
      "dest": "/index.html"
    }
  ]
}
